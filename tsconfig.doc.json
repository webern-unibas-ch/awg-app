{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": "./src/",
        "outDir": "./out-tsc/app",
        "types": ["node"],
        "paths": {
            "@awg-app/*": ["app/*"],
            "@awg-core/*": ["app/core/*"],
            "@awg-shared/*": ["app/shared/*"],
            "@awg-side-info/*": ["app/side-info/*"],
            "@awg-views/*": ["app/views/*"]
        }
    },
    "include": ["src/main.ts", "src/polyfills.ts", "src/**/*.d.ts", "src/**/*.ts"],
    "exclude": ["src/test.ts", "src/**/*.spec.ts", "src/testing/", "e2e/**/*"]
}
